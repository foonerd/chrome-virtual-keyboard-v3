{
  "name": "Virtual Keyboard",
  "description": "Fullscreen on-screen virtual keyboard for touch screen devices",
  "manifest_version": 3,
  "version": "3.0.0",
  "icons": {
    "16": "keyboard.png",
    "48": "keyboard.png",
    "128": "keyboard.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": "buttons/keyboard_2.png",
    "default_title": "Virtual Keyboard Toggle",
    "default_popup": "toggle.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "keyboard.html",
        "layouts/*.html",
        "layouts/keyboard_ch.html",
        "layouts/keyboard_cs.html",
        "layouts/keyboard_de.html",
        "layouts/keyboard_en.html",
        "layouts/keyboard_es.html",
        "layouts/keyboard_fr.html",
        "layouts/keyboard_hu.html",
        "layouts/keyboard_it.html",
        "layouts/keyboard_ja.html",
        "layouts/keyboard_ko.html",
        "layouts/keyboard_no.html",
        "layouts/keyboard_pl.html",
        "layouts/keyboard_ru.html",
        "layouts/keyboard_sl.html",
        "layouts/keyboard_sw.html",
        "layouts/keyboard_ta.html",
        "layouts/keyboard_ua.html",
        "style.css",
        "options/styles.css",
        "options/script.js",
        "toggle.html",
        "toggle.js",
        "icons/backspace.png",
        "icons/backspace-e.png",
        "icons/close.png",
        "icons/enter.png",
        "icons/enter-e.png",
        "icons/settings.png",
        "icons/shift.png",
        "buttons/keyboard_1.png",
        "buttons/keyboard_2.png",
        "buttons/keyboard_3.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "wanakana.min.js",
        "script.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}